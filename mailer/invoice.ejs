<!DOCTYPE html>
<html>
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;1,300;1,400&display=swap"
      rel="stylesheet"
    />
    <style>
      .header {
        text-align: center;
        margin-bottom: 20px;
      }
      .invoice-details {
        margin-bottom: 20px;
      }
      .table {
        width: 100%;
        border-collapse: collapse;
        border: 1px green;
      }
      .table th,
      .table td {
        padding: 10px;
        border: 1px solid #ccc;
      }
      .table th {
        background-color: #f2f2f2;
      }
      .total {
        font-weight: bold;
      }
    </style>
  </head>

  <body
    style="
      background: #e1e1e1;
      font-family: 'Roboto', sans-serif;
      font-size: 1em;
    "
  >
    <style type="text/css">
      div.preheader {
        display: none !important;
      }
    </style>
    <div
      class="preheader"
      style="font-size: 1px; display: none !important"
    ></div>
    <table
      id="backgroundTable"
      width="100%"
      cellspacing="0"
      cellpadding="0"
      border="0"
      style="background: #e1e1e1"
    >
      <tr>
        <td
          class="body"
          align="center"
          valign="top"
          style="background: #e1e1e1"
          width="100%"
        >
          <table cellpadding="0" cellspacing="0">
            <tr>
              <td width="640"></td>
            </tr>
            <tr>
              <td
                class="main"
                width="640"
                align="center"
                style="padding: 0 10px"
              >
                <table
                  style="min-width: 100%"
                  class="stylingblock-content-wrapper"
                  width="100%"
                  cellspacing="0"
                  cellpadding="0"
                >
                  <tr>
                    <td class="stylingblock-content-wrapper camarker-inner">
                      <table cellspacing="0" cellpadding="0">
                        <tr>
                          <td width="640" align="left">
                            <table width="100%" cellspacing="0" cellpadding="0">
                              <tr>
                                <td
                                  class="header header--left"
                                  style="padding: 20px 10px"
                                  align="left"
                                ></td>
                              </tr>
                            </table>
                          </td>
                        </tr>
                      </table>
                    </td>
                  </tr>
                </table>
                <table
                  style="min-width: 100%"
                  class="stylingblock-content-wrapper"
                  width="100%"
                >
                  <div class="invoice-details">
                    <p><strong>Invoice Number:</strong> <%= invoiceTotal %></p>
                    <p><strong>Invoice Date:</strong> <%= date %></p>
                    <!-- Add more invoice details here -->
                  </div>
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Item</th>

                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% items.forEach(function(item) { %>
                      <tr>
                        <td><%= item.product_name %></td>

                        <td><%= item.quantity %></td>
                        <td>$<%= item.price %></td>
                        <td>$<%= (item.quantity * item.price).toFixed(2) %></td>
                      </tr>
                      <% }); %>
                      <div class="invoice-details">
                        <p>
                          <strong>Invoice Total:</strong> <%= invoiceTotal %>
                        </p>
                        <!-- <p><strong>Invoice Date:</strong> {{date}}</p> -->
                        <!-- Add more invoice details here -->
                      </div>
                    </tbody>
                  </table>
                </table>
              </td>
            </tr>
            <tr>
              <td
                class="footer"
                width="640"
                align="center"
                style="padding-top: 10px"
              >
                <table cellspacing="0" cellpadding="0">
                  <tr>
                    <td
                      align="center"
                      style="
                        font-family: Geneva, Tahoma, Verdana, sans-serif;
                        font-size: 14px;
                        line-height: 18px;
                        color: #738597;
                        padding: 0 20px 40px;
                      "
                    >
                      <br />
                      <br />
                      <strong>Email Alert!</strong>

                      <br />

                      You have recieved this email beacuse you have bought items
                      through our site
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
