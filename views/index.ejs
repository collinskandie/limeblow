  }

  .modal-box p {
    line-height: 20px;
    color: grey;
  }

  form input {
    height: 50px;
    width: 100%;
    border-radius: 3px;
  }

  form input {
    margin-top: 15px;
    padding: 0 65px;
    font-size: 18px;
    outline: none;
    border: 2px solid #078618;
    caret-color: #abecb4;
  }

  input::placeholder {
    color: #8c8c8c;
  }

  form input:focus {
    box-shadow: 0 0 15px #078618, 0 0 25px #b4f0fd, 0 0 35px #ffffff;
  }

  .modal-box .icons {
    margin-top: 25px;
  }

  .icons i {
    font-size: 22px;
    margin: 0 7px;
    color: #078618;
    cursor: pointer;
  }

  .icons i:hover {
    transform: scale(1.1);
    color: #078618;
  }
</style>
