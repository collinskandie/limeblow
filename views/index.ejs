  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const form = document.getElementById("subscribe-form");

      form.addEventListener("submit", function (event) {
        event.preventDefault(); // Prevent the default form submission behavior

        const email = form.querySelector("input[type='email']").value;

        // Define the API endpoint
        const apiEndpoint = "/api/subscribe"; // Ensure the correct API endpoint URL
        const data = {
          email: email,
        };

        // Send a POST request to the API endpoint
        fetch(apiEndpoint, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        })
          .then((response) => {
            if (response.ok) {
              return response.json(); // Parse the JSON response
            } else {
              throw new Error("Subscription failed"); // Throw an error for non-successful responses
            }
          })
          .then((data) => {
            if (data.success) {
              // The subscription was successful, and you can access the created coupon
              console.log("Subscription successful!");
              ///console.log(data.coupon); // Access the created coupon data here
              const coupon = data.coupon.code;
              const message =
                "You have successfully subscribed to our newsletter. Your coupon is: " +
                coupon;

              // Show an alert with the combined message
              alert(message);
              closePopup();
            } else {
              // Handle any other success-related logic
              console.error(data.message);
            }
          })
          .catch((error) => {
            // Handle errors, e.g., show an error message.
            console.error("Error:", error.message);
          });
      });
    });
  </script>

  <script>
    function openPopup() {
